
 <!-- JUMBOTRON -->
 <div class="frame">
  <div class="jumbotron text-center">
    <div class="container">
      <h1>Welcome to V.Society</h1>
      <p>Where you can keep track of all the nearby vegetarian/vegan restaurants along with your favorite dishes.</p>
      
    </div>
  </div>

<ul>
    {{#each restaurantList}}
        <li>
            <div><a id="edit" href="/restaurants/{{_id}}">VIEW RESTAURANTS</a></div>
            <div class="id" >ID: {{_id}}</div>
                <div class="name"><h1> Name: {{name}}</h1>
                <h3>Description: {{description}}</h3>
                <div>Phone Number: {{phoneNumber}}</div>
            </div>
            <div class="itemTitle">Items: 
                <ul class="items">
                    {{# each items}}
                        <li>Menu Favorites: {{name}}</li>
                    {{/ each}}
                    <br>
                    <br>
                    <hr>
                </ul>
            <div><a href="/restaurants/delete/{{_id}}" class="btn btn-danger" >Delete Restaurants</a></div>    
            <br>
            <br>
            <br>
            <hr>
            </div>
        </li>
        <br>
    {{/each}}
</ul>

<div><a href="/restaurants/new" >Add a new Restaurant</a></div>
