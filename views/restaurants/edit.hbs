<div>

  <h1>View Restaurant </h1>

</div>
<div>

    <form  method="POST" action="/restaurants/{{user._id}}?_method=PUT">

      <div class="form-group">
        <label> Name:</label> 
        <input type="text" name="name" placeholder="Add Name" value="{{user.name}}">
      </div>

      <div class="form-group">
        <label>Description:</label>
        <input type="text" name="description" placeholder="Add Description" value="{{user.description}}"><br>
      </div>

      <div class="form-group">
        <label> Phone:</label> 
        <input type="text" name="phoneNumber" placeholder="Phone Number" value="{{user.phoneNumber}}"><br>
      </div>
      <img src="/images/logo.png">
        <input type="submit">
    </form>

</div>

